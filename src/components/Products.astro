---
import { motion } from "framer-motion";

const products = [
  {
    title: "چرتکه آموزشی حرفه‌ای",
    description: "چرتکه با کیفیت برای آموزش محاسبات ذهنی",
    price: "۳۵۰,۰۰۰",
    image: "https://img.freepik.com/free-photo/close-up-hands-using-abacus_23-2149198775.jpg",
    features: [
      "ساخته شده از چوب درجه یک",
      "مناسب برای مبتدیان و حرفه‌ای‌ها",
      "همراه با دفترچه راهنما",
      "گارانتی تعویض یک ساله"
    ]
  },
  {
    title: "کیت رباتیک مقدماتی",
    description: "مجموعه کامل برای شروع یادگیری رباتیک",
    price: "۱,۲۵۰,۰۰۰",
    image: "https://img.freepik.com/free-photo/robot-kit-desk_23-2149198790.jpg",
    features: [
      "شامل ۲۰۰ قطعه اصلی",
      "برد کنترلر اختصاصی",
      "راهنمای تصویری ساخت ۱۰ پروژه",
      "جعبه نگهداری مخصوص"
    ]
  },
  {
    title: "بسته آموزش برنامه‌نویسی",
    description: "پکیج جامع آموزش برنامه‌نویسی برای کودکان",
    price: "۸۵۰,۰۰۰",
    image: "https://img.freepik.com/free-photo/programming-background-with-code_23-2149198803.jpg",
    features: [
      "کتاب آموزشی تصویری",
      "نرم‌افزار آموزشی تعاملی",
      "۵۰ پروژه عملی",
      "پشتیبانی آنلاین"
    ]
  }
];
---

<section class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        محصولات آموزشی
      </h2>
      <p class="text-gray-600 dark:text-gray-300">
        ابزارهای با کیفیت برای یادگیری بهتر
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map((product, index) => (
        <motion.div
          client:load
          initial={{ opacity: 0, y: 20 }}
          whileInView={{ opacity: 1, y: 0 }}
          viewport={{ once: true }}
          transition={{ duration: 0.5, delay: index * 0.1 }}
          class="bg-white dark:bg-gray-700 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow"
        >
          <img
            src={product.image}
            alt={product.title}
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
              {product.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              {product.description}
            </p>
            <ul class="space-y-2 mb-6">
              {product.features.map(feature => (
                <li class="flex items-center text-gray-600 dark:text-gray-300">
                  <svg class="w-4 h-4 text-primary-500 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <div class="flex items-center justify-between mb-4">
              <span class="text-2xl font-bold text-primary-500">
                {product.price} تومان
              </span>
              <button class="bg-primary-500 hover:bg-primary-600 text-white px-6 py-2 rounded-lg transition-colors">
                افزودن به سبد
              </button>
            </div>
          </div>
        </motion.div>
      ))}
    </div>
  </div>
</section>