  .swiper-button-next,
  .swiper-button-prev {
    color: white !important;
  }
  
  .swiper-pagination-bullet {
    background: white !important;
  }
  
  .swiper-pagination-bullet-active {
    background: var(--primary-500) !important;
  }
</style>