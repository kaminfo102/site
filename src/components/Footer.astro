---
import { Image } from 'astro:assets';

const quickLinks = [
  { title: 'درباره ما', href: '/about' },
  { title: 'تماس با ما', href: '/contact' },
  { title: 'سوالات متداول', href: '/faq' },
  { title: 'قوانین و مقررات', href: '/terms' },
];

const courses = [
  { title: 'محاسبات ذهنی', href: '/courses/mental-math' },
  { title: 'رباتیک', href: '/courses/robotics' },
  { title: 'برنامه‌نویسی', href: '/courses/programming' },
  { title: 'هوش مصنوعی', href: '/courses/ai' },
];

const socialLinks = [
  { icon: 'instagram', href: '#', label: 'اینستاگرام' },
  { icon: 'telegram', href: '#', label: 'تلگرام' },
  { icon: 'whatsapp', href: '#', label: 'واتساپ' },
  { icon: 'youtube', href: '#', label: 'یوتیوب' },
];
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- About Section -->
      <div>
        <div class="flex items-center space-x-2 space-x-reverse mb-4">
          <img src="/logo-white.svg" alt="آکادمی نخبگان" class="w-10 h-10" />
          <span class="text-xl font-bold text-white">آکادمی نخبگان</span>
        </div>
        <p class="text-gray-400 mb-4">
          آکادمی نخبگان با هدف پرورش استعدادهای درخشان در حوزه‌های علمی و فناوری، محیطی پویا و خلاق را برای یادگیری کودکان و نوجوانان فراهم می‌کند.
        </p>
        <div class="flex space-x-4 space-x-reverse">
          {socialLinks.map(link => (
            <a
              href={link.href}
              class="text-gray-400 hover:text-white transition-colors"
              aria-label={link.label}
            >
              <img
                src={`/icons/${link.icon}.svg`}
                alt={link.label}
                class="w-6 h-6"
              />
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white text-lg font-bold mb-4">دسترسی سریع</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Courses -->
      <div>
        <h3 class="text-white text-lg font-bold mb-4">دوره‌های آموزشی</h3>
        <ul class="space-y-2">
          {courses.map(course => (
            <li>
              <a
                href={course.href}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {course.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-white text-lg font-bold mb-4">اطلاعات تماس</h3>
        <div class="space-y-4">
          <div class="flex items-start space-x-3 space-x-reverse">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="text-gray-400">تهران، خیابان ولیعصر، خیابان فرشته، پلاک ۱۲۳</p>
          </div>
          <div class="flex items-center space-x-3 space-x-reverse">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:02112345678" class="text-gray-400 hover:text-white transition-colors">
              ۰۲۱-۱۲۳۴۵۶۷۸
            </a>
          </div>
          <div class="flex items-center space-x-3 space-x-reverse">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:info@example.com" class="text-gray-400 hover:text-white transition-colors">
              info@example.com
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-12 pt-8 text-center">
      <p class="text-gray-400">
        © {new Date().getFullYear()} آکادمی نخبگان. تمامی حقوق محفوظ است.
      </p>
    </div>
  </div>
</footer>